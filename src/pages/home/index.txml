  <view class="section-divider"/>

  <view class="p-medium">
    <section-title
      title="Nổi bật"
      value="{{null}}"
      onTapActionButton="goToProductPage"
    />
    <product-section
      isLoading="{{isLoading}}"
      skeletons="{{4}}"
      products="{{featuredProducts.data}}"
      onTapProduct="onTapProduct"
    />
  </view>

  <view class="section-divider"/>

  <view class="p-medium">
    <section-title
      title="Mới"
      value="newest"
      onTapActionButton="goToProductPage"
    />
    <product-section
      isLoading="{{isLoading}}"
      skeletons="{{4}}"
      products="{{newProducts.data}}"
      onTapProduct="onTapProduct"
    />
  </view>
</view>
